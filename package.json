  "bugs": {
    "url": "https://github.com/gomesdigital/dev-util/issues"
  },
  "homepage": "https://github.com/gomesdigital/dev-util#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.4"
  },
  "config": {
    "commitizen": {
